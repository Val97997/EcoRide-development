{{form_start(searchUserForm)}}

{{form_end(searchUserForm)}}

{% if user is not null %}
    <div class=" card usercard col-2 fs-4 align-self-center p-3 bg-dark text-white">
        <ul class="">
            <li>{{user.pseudo}}</li>
            {% if user.firstName is not null %}
            <li>
                {{user.firstName}}
            </li> 
            {% endif %}
            {% if user.lastName is not null %}
            <li>{{user.lastName}}</li>
            {% endif %}
            <li>{{user.email}}</li>
            {% if user.birthDate is not null %}
            <li>{{user.birthDate|date("m/d/Y")}}</li>
            {% endif %}
            
            <a href="{{path('app_admin_suspend-account', { 'id': user.id})}}" class="btn btn-danger fs-3">Suspend account</a>
        </ul>
    </div>

{% endif %}